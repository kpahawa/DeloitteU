<div class="container centerStuff">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
               html: {:class => 'ui form', :id => 'deviseForm'}) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'formField' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" , class: 'formField' %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" , class: "ui green button", style: 'width:50%;line-height:3;'%>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
