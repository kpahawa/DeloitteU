
<div class="container centerStuff">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: {:class => 'ui form', :id => 'deviseForm'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true , class: 'formField'%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" , class: 'formField'%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'formField'%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",  class: "ui orange button", style: 'width:50%;line-height:3;' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

