<div class="container centerStuff">
    <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post , :class => 'ui form', :id => 'deviseForm'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true,class: 'formField' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions",class: "ui orange button", style: 'width:50%;line-height:3;' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

