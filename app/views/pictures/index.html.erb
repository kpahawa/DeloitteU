<h1>Listing Pictures</h1>
<div class="ui two column doubling stackable grid">
  <% @pictures.each do |pic| %>
      <div class="column" id="picColumn">
        <a class="image" href="/pictures/<%= pic.id %>">
          <div class="ui special cards">
            <div class = "green card">
              <div class = "dimmable image">
                <div class="ui dimmer">
                  <div class="content">
                    <div class="center">
                      <%= link_to 'Show', pic, :class => 'ui green button' , :id => 'showButton' %>
                    </div>
                  </div>
                </div>
                <img src="<%= pic.url %>" class="homePic">
              </div>
            </div>
          </div>
        </a>
      </div>
  <%end%>
</div>

